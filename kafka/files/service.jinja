# This file was generated by SaltStack with kafka-formula.
# Manual changes will be overwritten at the next run of SaltStack.
[Unit]
Description=Apache Kafka (broker)
Documentation=http://kafka.apache.org
Requires=network.target remote-fs.target
After=network.target remote-fs.target

[Service]
Type=simple
PIDFile={{ kafka.home }}/kafka.pid
User={{ kafka.user }}
Group={{ kafka.group }}

# Set java.awt.headless=true if JAVA_OPTS is not set so the
# # Xalan XSL transformer can work without X11 display on JDK 1.4+
Environment="JAVA_OPTS=-Djava.awt.headless=true"
#
# # Load any environment overrides from this file.
EnvironmentFile=-{{ kafka.environment_file }}

ExecStart={{ kafka.home }}/bin/kafka-server-start.sh {{ kafka.home }}/config/server.properties
ExecStop={{ kafka.home }}/bin/kafka-server-stop.sh
Restart=on-failure
SyslogIdentifier={{ kafka.service }}
WorkingDirectory={{ kafka.home  }}

[Install]
WantedBy=multi-user.target
