[Unit]
Description=Apache Kafka (broker)
Documentation=http://kafka.apache.org
Requires=network.target remote-fs.target
After=network.target remote-fs.target

[Service]
Type=simple
PIDFile={{ kafka.home }}/kafka.pid
User={{ kafka.user }}
Group={{ kafka.group }}
Environment=KAFKA_HEAP_OPTS={{ kafka.heap_opts }}
Environment=JAVA_HOME={{ kafka.java_home }}
ExecStart={{ kafka.home }}/bin/kafka-server-start.sh {{ kafka.home }}/config/server.properties
ExecStop={{ kafka.home }}/bin/kafka-server-stop.sh
Restart=on-failure
SyslogIdentifier={{ kafka.service }}
WorkingDirectory={{ kafka.home  }}

[Install]
WantedBy=multi-user.target
